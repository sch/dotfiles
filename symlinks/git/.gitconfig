[user]
	name = Adrian Schaedle
	signingkey = adrian@schaedle.me
	useConfigOnly = true
	email = adrian@schaedle.me

[alias]
	aliases = config --get-regexp ^alias\\.
	amend = commit --amend --no-edit
	last-commit = rev-parse HEAD
	branches = branch --sort=-committerdate
	staged = diff --staged
	delete-merged = !git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d
	one-more-thing = !git add . && git amend && git push --force
	switch = !git branches | cut -c 3- | selecta | xargs git checkout
	copy-head = !git rev-parse --short HEAD | pbcopy
	get = !git-get

[color]
	ui = true

[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
	algorithm = patience
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
[merge]
	tool = Kaleidoscope

[core]
	excludesfile = ~/.gitignore_global
	filemode = false
	trustctime = false
	autocrlf = input
	safecrlf = false
	editor = nvim

[pull]
	rebase = true

[push]
	default = current

[rerere]
	enabled = true

[help]
  autocorrect = 1

[hub]
protocol = https
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[commit]
	; gpgsign = true
[tag]
	sort = version:refname
[merge "npm-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npx npm-merge-driver merge %A %O %B %P
